<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Store</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous"> 
    <link rel="stylesheet" href="/assets/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/common.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/assets/js/common.js"></script>

  </head>
<body>

  <div class="d-flex" id="wrapper">
    
    <%- include('partial/sidebarnav.ejs') %>
   

      <div class="container-fluid">
        <button id="notification-btn" class="btn btn-primary mr-3 mt-3" style="float: right;"> <i class="fa fa-bell"></i> </button>
        <button id="cart-btn" class="btn btn-primary mr-3 mt-3" style="float: right;"> <i class="fa fa-shopping-basket"></i> </button>
        <div class="notification-menu-wrapper">
          <div class="notification-menu">
            
          </div>
        </div>
      
          <div class="cart-menu-wrapper">
            <div class="cart-menu">
              
            </div>
            <div class="cart-menu-footer">
              <button style="float: right; margin-right: 10px; margin-bottom:10px;" id="checkout-btn" class="btn btn-primary btn-sm">Checkout</button>
              <button style="float: right; margin-right: 10px; margin-bottom:10px; color: white; background-color: coral;" id="removeall-btn" class="btn btn-sm">Remove All</button>
            </div>
          </div>
          
        
       
        <h1 class="mt-4 font-weight-light">Search</h1>
        <form action="" method="GET">
          <input style="padding: 10px; width: 300px; border: 1px solid;" class="form-input" type="search" placeholder="Type to search">
          <button class="btn btn-primary mb-1" style="padding: 10px; padding-right: 15px; padding-left: 15px;"><i class="fa fa-search"></i></button>
          <br>
        <!--   <button class="btn btn-info btn-sm mt-2"><i class="fa fa-filter"></i>   <span class="ml-2">Add Filter</span></button>
         -->
        </form>
       
        
        
        <div class="row">
            <div class="col-lg-12 col-sm-5">
              <div class="game-list d-flex  flex-wrap pt-3">


                <% for(var i=0;i<result.length ;i++ )  {  %>
                  
                  <div class="box-wrapper">
                    <div class="game-wrapper d-flex">
    
                        <div class="box mb-3">
                          <img src="/<%= result[i].gamepicture %>" alt="" srcset=""> 
                        </div>
    
                        <div class="box-text mr-3 mb-3 text-center">
                          <h5><%= result[i].gametitle %></h5>
                        
                          <h5>Publisher : <%= result[i].publisher %></h5>
                          <h5>Release Date : <%= result[i].publishdate %></h5>

                          <h6>Current Price : $<%= result[i].price %></h6>
                          
                        </div>
    
                    </div>
    
                    <div class="box-button pb-3">
                      <input type="button" id="<%= result[i].gameid %>"  class="cart-btn btn btn-danger btn-sm" value="Add to cart">
                     
                      <input type="button" id="<%= result[i].gameid %>" class="wishlist-btn btn btn-warning btn-sm" value="Add to wish list">
                    
                    </div>
    
                  </div>
                <%}%>
               
                <% if (message.success==false) { %> 

                  <script>alert("Already in cart!");</script>
               <% }else if(message.success==true){   %>
                <script>
                  alert("message value");
                  
                </script>
                <% } %>
               
                <!--  -->

            </div>
          </div>
      </div>

    

      </div>
    </div>


</body>
 
</html>