<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/bootstrap.min.css">
    <link rel="stylesheet" href="/css/sb-admin-2.min.css">
    <title>Moderation Panel</title>
    <style>
    </style>
</head>

<body>
    <div class="container">
        <!-- nav start-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
            <a class="navbar-brand" href="#">Game Store</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Store</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link dropdown-toggle" href="/forum" data-toggle="dropdown">Forum</a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <!-- user -->
                            <a href="/forum/issues" class="dropdown-item">Issues</a>
                            <a href="/forum/reviews" class="dropdown-item">Reviews</a>
                            <a href="/forum/walkthroughs" class="dropdown-item">Walkthroughs</a>
                            <a href="/forum/gossiproom" class="dropdown-item">Gossip Room</a>
                            <!-- user -->
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- nav end -->

        <!-- breadcumb start -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/forum">forum</a></li>
                <li class="breadcrumb-item"><a href="/forum/moderate">moderate</a></li>
                <li class="breadcrumb-item active" aria-current="page">delete-comment-requests</li>
            </ol>
        </nav>
        <!-- breadcumb end -->

        <div class="row mb-5">
            <div class="col-sm-12 table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">request id</th>
                            <th scope="col">Time</th>
                            <th scope="col">User</th>
                            <th scope="col">postid</th>
                            <th scope="col">commentid</th>
                            <th scope="col">Approve</th>
                            <th scope="col">Decline</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i<deleteCommentReqList.length; i++) { %>
                        <tr class="post-row" data-postid="<%=deleteCommentReqList[i].postid%>"
                            data-commentid="<%=deleteCommentReqList[i].commentid%>">
                            <th scope="row"><%=deleteCommentReqList[i].id%></th>
                            <td class="dtime"><%=deleteCommentReqList[i].time%></td>
                            <td><%=deleteCommentReqList[i].username%></td>
                            <td><%=deleteCommentReqList[i].postid%></td>
                            <td><%=deleteCommentReqList[i].commentid%></td>
                            <td>
                                <button type="submit" class="btn btn-block btn-success"
                                    data-commentid="<%=deleteCommentReqList[i].commentid%>"
                                    data-postid="<%=deleteCommentReqList[i].postid%>">Approve</button>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-block btn-danger"
                                    data-commentid="<%=deleteCommentReqList[i].commentid%>"
                                    data-postid="<%=deleteCommentReqList[i].postid%>">Decline</button>
                            </td>
                        </tr>

                        <% } %>

                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <script src="/jquery.min.js"></script>
    <script src="/popper.min.js"></script>
    <script src="/bootstrap.min.js"></script>
    <script src="/moment.min.js"></script>

    <script>
        $('.dtime').each(function () {
            const utime = parseInt($(this).html());
            const formattedTime = moment.unix(utime).format("MM/DD/YYYY hh:mm:ss a");
            $(this).html(formattedTime);

        });
    </script>
    <script>
        $('.post-row').click(function () {
            window.location.href = '/forum/moderate/delete-comment-requests/' + $(this).data('postid') + '&' + $(this).data('commentid');
        });
    </script>

</body>

</html>